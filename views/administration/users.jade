extends ../layout

block content
  section.content-header
    span.clear-both
    ol.breadcrumb
      li
        a(href='#')
          i.fa.fa-dashboard
          |  Administration
      li.active Users
    // Main content
    section.content.container-fluid
      .row
        
        .col-xs-12

          .box
            .box-header
              h3.box-title Users
              a.btn.btn-primary.pull-right(href="/administration/create-user") Create User              
            .box-body
              table#enabled-users.table.table-borderd.table-hover.table-striped
                thead
                  tr
                    th Name
                    th Email
                    th Department
                    th Job Title
                tbody
                  each u, i in users
                    tr
                      td #{user.firstname} #{user.lastname}
                      td #{user.email}
                      td #{user.department}
                      td #{user.jobtitle}

  script.
    $('#enabled-users').DataTable({
      'paging'      : true,
      'lengthChange': false,
      'searching'   : true,
      'ordering'    : true,
      'info'        : true,
      'autoWidth'   : true
    });


